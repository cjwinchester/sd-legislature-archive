ions": [{"bill_id": 22083, "bill_version_id": 214645, "bill_version": "Introduced", "bill_version_date": "2021-01-28T08:58:22.487-06:00", "bill_text": "An Act to provide for the reimbursement of lost revenue for businesses forcibly closed by a governmental entity. Be it enacted by the Legislature of the State of South Dakota: Section 1. That a NEW SECTION be added: 1-16G-90. State or political subdivision--Lost revenue reimbursement. If the state or a political subdivision of the state passes or enacts a resolution or ordinance that orders temporary closure of a classification of business, the state or political subdivision that caused the closure shall reimburse any affected business for fifty percent of its projected lost revenue during the period of closure. A business's projected lost revenue during the period of closure shall be based on three years of historical data from the business, the industry, and the market. For the purposes of this section, a classification of business is more than one business registered with the secretary of state that shares the same two-digit code of the North American Industry Classification System."}], "amendments": [{"bill_id": 22083, "document_id": 216224, "document_url": "https://mylrc.sdlegislature.gov/api/Documents/216224.pdf", "legislator_profile_id": 1828, "document_id_instructions": 216448, "document_id_instructions_url": "https://mylrc.sdlegislature.gov/api/Documents/216448.pdf"}], "fiscal_notes": [], "action_log": [{"bill_id": 22083, "action_date": "2021-01-28T13:00:00-06:00", "document_id": 214294, "document_url": "https://mylrc.sdlegislature.gov/api/Documents/214294.pdf", "status_text": "First read in Senate and referred to", "journal_page": 134, "committee_id_action": 514, "committee_id_assigned": 511, "result": "N", "vote": {}}, {"bill_id": 22083, "action_date": "2021-02-05T07:45:00-06:00", "document_id": 216434, "document_url": "https://mylrc.sdlegislature.gov/api/Documents/216434.pdf", "status_text": "Scheduled fo